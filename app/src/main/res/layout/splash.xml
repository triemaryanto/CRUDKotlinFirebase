<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splashtext"
        android:elevation="6dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/logodiman"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="6dp"
            android:src="@drawable/dua"
            tools:ignore="MissingConstraints"
            android:layout_gravity="center_horizontal"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="#fff"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#fff"
            android:text="TIM VERIVIKATOR"
            android:layout_gravity="center_horizontal"
            ></TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/bgapp"
        android:layout_width="580dp"
        android:layout_height="510dp"
        android:src="@drawable/bgapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.900"
        android:scaleType="fitXY">

    </ImageView>

    <LinearLayout
        android:id="@+id/hometext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:elevation="6dp"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logodiman2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="6dp"
            android:src="@drawable/dua"
            tools:ignore="MissingConstraints"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:elevation="6dp"
            android:gravity="left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="50dp"
                android:text="VERIVIKATOR APP"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="italic"
                tools:ignore="MissingConstraints"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        android:layout_marginTop="340dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ladd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="70dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/add">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:layout_marginTop="80dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Tambah Data"
                        android:textColor="#fff">
                    </TextView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lsee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark">
                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/search"
                        android:layout_gravity="center_horizontal">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:layout_marginTop="80dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Lihat Data"
                        android:textColor="#fff"></TextView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lpdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginLeft="100dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_pdf"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="80dp"
                        android:text="PDF"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="#fff"></TextView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>